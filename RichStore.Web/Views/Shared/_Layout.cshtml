<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RichStore</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />



    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <header>
            <div class="col-md-12">
                <nav class="navbar navbar-expand-lg bg-success rounded mt-3 mb-3">
                    <a class="navbar-brand text-warning font-weight-bold" href="/">RichStore</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link nav-link-white" href="/">Home</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link nav-link-white" href="/Problem">Support</a>
                            </li>

                            <li class="nav-item active dropdown">
                                <a class="nav-link dropdown-toggle nav-link-white" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Categories
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/Categories/Printers">Printers</a>
                                    <a class="dropdown-item" href="/Categories/Engravers">Engravers</a>
                                    <a class="dropdown-item" href="/Categories/Consumables">Consumables</a>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="dropdown">
                                <a class="nav-link dropdown-toggle nav-item active nav-link-white font-weight-bold" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Profile
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/Identity/Login">Login</a>
                                    <a class="dropdown-item" href="/Identity/Register">Register</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        <main class="mt-3 mb-3">
            @RenderBody()
        </main>
        <footer>
            <div class=" col-md-12 ">
                <div class="bg-success rounded mt-3 mb-3">
                    <div class="text-white p-3 text-center font-weight-bold">
                        &copy; CopyRight RichStore 2019. All rights reserved.
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

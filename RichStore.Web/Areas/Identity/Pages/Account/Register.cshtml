@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<h3 class="bg-success text-white font-weight-bold text-center p-2 w-50 mx-auto rounded">Sign up</h3>
<form style="border:1px solid" method="post" asp-action="/Identity/Account/Register" class="form border-success rounded p-3 w-25 mx-auto mt-3">
    <div class="form-group mx-auto">
        <div class="form-group form-inline">
            <label asp-for="Input.Username" class="text-success h5">Username</label>
        </div>
        <input type="text"
               class="form-control text-primary text-center"
               id="username"
               placeholder="Enter your username"
               asp-for="Input.Username">
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="form-group form-inline">
            <label asp-for="Input.Password" class="text-success h5">Password</label>
        </div>
        <input type="password"
               class="form-control text-primary text-center"
               id="password"
               placeholder="Enter your password"
               asp-for="Input.Password">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="form-group form-inline">
            <label asp-for="Input.ConfirmPassword" class="text-success h5">Confirm password</label>
        </div>
        <input type="password"
               class="form-control text-primary text-center"
               id="password"
               placeholder="Confirm your password"
               asp-for="Input.ConfirmPassword">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group mx-auto">
        <div class="form-group form-inline">
            <label asp-for="Input.Email" class="text-success h5">Email</label>
        </div>
        <input type="email"
               class="form-control text-primary text-center"
               id="password"
               placeholder="Enter your email address"
               asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center mt-lg-3">
        <button class="btn btn-success font-weight-bold">Sign up</button>
    </div>

</form>
<h3 class="bg-success text-white font-weight-bold text-center p-4 w-50 mx-auto rounded mt-3"></h3>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
